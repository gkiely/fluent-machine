{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": ["dom", "es6"],
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
